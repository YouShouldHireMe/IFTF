<!DOCTYPE html>
<html>
<head>
  <title>IFTF</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css" rel="stylesheet" />
  <script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"></script>
</head>
<body>
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.7&appId=1672555029731229";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
	<div id="page_header">
		<h1 style="text-align:center; font-size:25px">
    		<%= link_to 'The Interface for the Future', root_path %>
		</h1>
		<% if current_user %>
			<div id="settings_button">
				<%= link_to('Settings', settings_path) %>
			</div>
			<div id="user_info" class="logged_in">
				Logged in as <%= current_user.email %> 
				<span> <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>   </span>
			</div>
		<% else %>
			<div id="user_info">
				<span> <%= link_to 'Log in', new_user_session_path, :remote => true %> </span>
				<span> <%= link_to 'Sign up', '/users/sign_up' %> </span>
			</div>
		<% end %>
		</div>
	</div>
<!--
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>
-->

	<%= yield %>

</body>
</html>

<div class="popup_header">Log In</div>
<div class="error_messages"></div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, :placeholder => "Email", autofocus: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, :placeholder => "Password", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div id="remember_me" class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div id="pwd_reset" class="text_right field"><%= link_to "forgot your password?", new_password_reset_path, :remote=>true %></div>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<div class="popup_footer"><%= link_to 'Sign up', '/users/sign_up' %> and join the community </div>

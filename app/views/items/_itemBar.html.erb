<ul class="horizontal_list" style="float:left; margin-left:10px; margin-top:2px;">
	<li>
		<div class="fb-share-button" data-href="<%=@item.url %>" data-layout="button" data-size="small" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse">Share</a></div>
	</li>
	<li>
		<a href="https://twitter.com/share" class="twitter-share-button" data-text="<%=@item.title %>" data-url="<%=@item.url %>" data-show-count="false">Tweet</a><script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
	</li>
</ul>
<ul class="horizontal_list">	
    <li class="button orange_white"><%= link_to 'Edit', edit_item_path(@item), :remote=>true %></li>
    <% if current_user %>
    	<li class="button orange_white"><%= link_to 'Delete', item_path(@item), method: :delete, data: { confirm: @item.title + ' will be deleted.' } %></li>
    <% else %>
    	<li class="button orange_white"><%= link_to 'Delete', item_path(@item), method: :delete, :remote=>true, data: { confirm: @item.title + ' will be deleted.' } %></li>
    <% end %>
    <li class="button orange_white"><%= link_to 'View Linked Items', linkeditems_path(@item), :remote=>true %></li>
</ul>
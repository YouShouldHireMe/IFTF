<div id="search_advance">
<h4 class="token1">Advanced Search</h4> 
<%= form_tag(search_path, method: "get", remote:true) do %>
    <ul id="advance_options" class="styleless_list">
        <li><%= label_tag(:keyword, "Search") %>
            <%= text_field_tag(:keyword) %>
        </li>
        <li><%= label_tag(:type, "Item Type") %>
            <%= select_tag 'itemType', options_for_select(['','Artifact', 'Forecast', 'Project', 'Signal']), {:inclue_blank => true} %>
        </li>
        <li>
            <%= label_tag(:tags, "Tags") %>
            <%= select_tag 'filter_tags[]', options_for_select(Tag.all.collect {|tag| [tag.name, tag.id]}), {:multiple => true} %>
        </li>
        <li>
            <%= label_tag(:related_items, "Related Items") %>
            <%= select_tag 'filter_items[]', options_for_select(Item.all.collect {|item| [item.title, item.id]}), {:multiple => true} %>
        </li>
    </ul>
    <%= submit_tag("Search", :class => "button orange_white") %> 
<% end %>
</div>
<script type="text/javascript">
    $('#filter_tags_').select2();
    $('#filter_items_').select2();
    $('#itemType').select2({placeholder: "All items", allowClear: true});
    $('#search_advance input[type="submit"]').on('click', function(){
        $('#navigator').hide();
    });
</script>
